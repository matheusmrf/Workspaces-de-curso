package com.ti2cc;

public class Principal {
	
	public static void main(String[] args) {
		
		DAO dao = new DAO();
		
		dao.conectar();

		
		//Inserir um elemento na tabela
		Monitores monitores = new Monitores(11, "pablo", "diw",'M');
		if(dao.inserirMonitores(monitores) == true) {
			System.out.println("Inserção com sucesso -> " + monitores.toString());
		}
		
		//Mostrar usuários do sexo masculino		
		System.out.println("==== Mostrar monitores do turno matutino === ");
		Monitores[] monitores = dao.getMonitoresTurnoManha();
		for(int i = 0; i < monitores.length; i++) {
			System.out.println(monitores[i].toString());
		}

		//Atualizar usuário
		usuario.setSenha("nova senha");
		dao.atualizarUsuario(usuario);

		//Mostrar usuários do sexo masculino
		System.out.println("==== Mostrar usuários === ");
		usuarios = dao.getUsuarios();
		for(int i = 0; i < usuarios.length; i++) {
			System.out.println(usuarios[i].toString());
		}
		
		//Excluir usuário
		dao.excluirUsuario(usuario.getCodigo());
		
		//Mostrar usuários
		usuarios = dao.getUsuarios();
		System.out.println("==== Mostrar usuários === ");		
		for(int i = 0; i < usuarios.length; i++) {
			System.out.println(usuarios[i].toString());
		}
		
		dao.close();
	}
}
